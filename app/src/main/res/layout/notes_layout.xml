<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:backgroundTint="#120F27"
    android:paddingLeft="10dp"

    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/notecard"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"></androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:background="@drawable/shapecurve"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/whiteunderline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/notetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:paddingRight="10dp"

                android:paddingBottom="10dp"
                android:text="This is your Developer"
                android:textColor="@color/offwhite"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:id="@+id/menupopbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"


                android:src="@drawable/ic_baseline_more_vert_24">

            </ImageView>


        </LinearLayout>


        <TextView
            android:id="@+id/notecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:maxLines="5"
            android:text="This is your code which appears here"
            android:textColor="@color/offwhite"
            android:textSize="15sp">


        </TextView>

    </LinearLayout>

</RelativeLayout>