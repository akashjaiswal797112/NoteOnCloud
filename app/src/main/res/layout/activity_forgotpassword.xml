<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darknavybackground"
    tools:context=".forgotpassword">


    <TextView
        android:id="@+id/gobacktologin"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="535dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Remember your password? Sign in"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="14dp">

    </TextView>

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/buttom_yellow"
        android:fontFamily="@font/nunito_sans"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="   Forgot Password   "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText

        android:id="@+id/forgotpassword"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_forgot_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittextdesign"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Enter your email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="40dp"
        android:paddingBottom="15dp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/passwordrecoverbutton"
        android:layout_width="295dp"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"

        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"

        android:layout_marginRight="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/nunito_sans"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text=" Click Here To Recover "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/emailicon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="425dp"
        android:src="@drawable/ic_baseline_email_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="160dp"
        app:srcCompat="@drawable/noteslogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="110dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/nunito_sans"
        android:text="NoteOnCloud"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>