<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darknavybackground"
    tools:context=".forgotpassword">


    <TextView
        android:id="@+id/gobacktologin"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_below="@+id/forgotpassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30sp"
        android:layout_marginLeft="95sp"
        android:layout_marginTop="90sp"
        android:maxLines="1"
        android:layout_marginEnd="30sp"
        android:fontFamily="@font/nunito_sans"

        android:text="Remember your password? Sign in"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="14sp">

    </TextView>

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90sp"
        android:layout_marginTop="300sp"
        android:layout_marginEnd="90sp"
        android:background="@drawable/buttom_yellow"
        android:fontFamily="@font/nunito_sans"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:text="   Forgot Password   "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText

        android:id="@+id/forgotpassword"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_forgot_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="85sp"
        android:layout_marginEnd="50sp"
        android:background="@drawable/edittextdesign"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Enter your email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="40sp"
        android:paddingBottom="15sp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/passwordrecoverbutton"
        android:layout_width="295sp"
        android:layout_height="48sp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50sp"
        android:layout_marginLeft="50sp"

        android:layout_marginTop="150sp"
        android:layout_marginEnd="50sp"

        android:layout_marginRight="50sp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/button1"
        android:fontFamily="@font/nunito_sans"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text=" Click Here To Recover "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/emailicon1"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="425sp"
        android:src="@drawable/ic_baseline_email_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="95sp"
        android:layout_height="95sp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140sp"
        android:layout_marginTop="85sp"
        android:layout_marginEnd="140sp"
        app:srcCompat="@drawable/noteslogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="90sp"
        android:fontFamily="@font/nunito_sans"
        android:maxLines="1"
        android:text="NoteOnCloud"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>