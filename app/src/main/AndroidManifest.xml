<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akash.noteoncloud">
<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.VIBRATE"  />


    <application

        android:allowBackup="true"
        android:icon="@mipmap/logonoc"
        android:label="NoteOnCloud"
        android:roundIcon="@mipmap/logonoc"
        android:supportsRtl="true"

        android:theme="@style/Theme.NoteOnCloud">


        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".notedetails"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="true"
            android:parentActivityName=".notesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".editnoteactivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".notesActivity"

            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".createnote"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".notesActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".notesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".forgotpassword"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"

            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="true">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1316091785032274~5337387354"/>

    </application>

</manifest>